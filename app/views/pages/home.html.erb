<div class="row">
    <% if user_signed_in? %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Your Profile</h2>
                <% if current_user.profile %>
                    <%= link_to "Edit your profile", edit_user_profile(current_user), class: 'btn btn-default btn-lg btn-block' %>
                    <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
                <% else %>
                    <p>Create your profile so that you can share your information with the community.</p>
                <% end %>
            </div>
        </div>

         <div class="col-md-6">
        <div style="width: 500px; margin: 200px auto 200px auto;">
            <div class="well">
                <h2 class="text-center">
                    Buyer Form
                </h2>
                <p class="text-center">You are one step away from getting what you have been looking for! Please fill in the following form!</p>
                <form>
                    Full Name:<br>
                    <input type="text" name="Full Name"><br>

                     Contact Information :<br>
                     <input type="text" name="Contact Information"><br>

                     Item that you are looking for :<br>
                     <input type="text" name="Item that you are looking for"><br>

                     Max Price :<br>
                     <input type="text" name="Max Price"><br>

                     Specification :<br>
                     <textarea name="Specification" cols="40" rows="5"></textarea>

                     <br><input type="submit" value="Submit"><br>
                </form>
            </div>
            </div>
        </div>

    <% else %>

        <div class="col-md-6">
            <div class="well text-center">
                <h2>Consumer Membership</h2>
                <h4>Sign up to send buy requests to thousands of sellers</h4>
                </br>
                <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well text-center">
                <h2>Producer Membership</h2>
                <h4>Join and get direct and immediate access to buyers</h4>
                <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
    <div class="jumbotron text-center">
    <h1>Welcome to Seeker</h1>
    <h3>Facilitating more efficiency between producers and consumers.</h3>
    </div>
        <div class="row">
            <div class="col-md-6">
                <div class="well text-center">
                    <h2>Buyer Account</h2>
                    <h4>Sign up to send buy requests to thousands of sellers</h4>
                    </br>
                    <%= link_to "Sign up as Buyer", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
                </div>
            </div>
                <div class="col-md-6">
                <div class="well text-center">
                    <h2>Seller Account</h2>
                    <h4>Join and get direct and immediate access to buyers</h4>
                    <%= link_to "Sign up as Seller", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
                </div>
    <% end %>
</div>